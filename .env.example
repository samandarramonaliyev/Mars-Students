# =============================================================================
# MARS DEVS - DOCKER COMPOSE ENVIRONMENT VARIABLES
# =============================================================================
# Скопируйте этот файл в .env и заполните значения для production

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# ВАЖНО: Сгенерируйте уникальный ключ!
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-in-production

# Разрешённые хосты (через запятую, без пробелов)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS разрешённые источники (через запятую, с протоколом)
CORS_ALLOWED_ORIGINS=http://localhost,https://your-domain.com

# CSRF доверенные источники (через запятую, с протоколом)
CSRF_TRUSTED_ORIGINS=http://localhost,https://your-domain.com

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# PostgreSQL рекомендуется для production - данные сохраняются при перезапуске

DB_NAME=marsdevs_db
DB_USER=marsdevs
DB_PASSWORD=marsdevs123

# =============================================================================
# JWT TOKENS
# =============================================================================

JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# SECURITY (для HTTPS)
# =============================================================================

# Включить редирект на HTTPS (True если есть SSL сертификат)
SECURE_SSL_REDIRECT=False

# =============================================================================
# PORTS
# =============================================================================

# Порт для frontend (nginx)
FRONTEND_PORT=80
