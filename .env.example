# =============================================================================
# MARS DEVS - ENVIRONMENT VARIABLES
# =============================================================================
# 
# Copy this file to .env and configure for your environment
#
# For Docker Compose deployment, this file is used directly.
# For Render/Railway, set these in the dashboard.
#
# =============================================================================

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# REQUIRED: Generate a secure secret key
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-in-production

# Debug mode (False for production!)
DEBUG=False

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# DATABASE
# =============================================================================

# Use SQLite (True for local dev without PostgreSQL)
USE_SQLITE=False

# PostgreSQL credentials
DB_NAME=marsdevs_db
DB_USER=marsdevs
DB_PASSWORD=marsdevs123

# Or use DATABASE_URL (Render/Railway provide this automatically)
# DATABASE_URL=postgres://user:password@host:5432/dbname

# =============================================================================
# REDIS (Channels)
# =============================================================================

# Redis URL for Channels/WebSocket
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CORS & CSRF
# =============================================================================

# Frontend URL(s) - comma-separated, with protocol
CORS_ALLOWED_ORIGINS=http://localhost,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost,https://yourdomain.com

# =============================================================================
# JWT TOKENS
# =============================================================================

JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# PORTS (Docker Compose)
# =============================================================================

# HTTP port
PORT=80

# HTTPS port (if using SSL)
SSL_PORT=443

# =============================================================================
# OPTIONAL: SSL/SECURITY
# =============================================================================

# Force HTTPS redirect (set True only if you have SSL certificate)
SECURE_SSL_REDIRECT=False
