# =============================================================================
# MARS DEVS - BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Скопируйте этот файл в .env и заполните значения

# =============================================================================
# DJANGO CORE
# =============================================================================

# ВАЖНО: Сгенерируйте уникальный ключ для production
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-in-production

# Режим отладки (False для production!)
DEBUG=True

# Разрешённые хосты (через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF доверенные источники (через запятую, с протоколом)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# DATABASE
# =============================================================================

# Использовать SQLite (True для локальной разработки)
USE_SQLITE=True

# PostgreSQL через DATABASE_URL (если USE_SQLITE=False)
# Формат: postgres://user:password@host:port/dbname
DATABASE_URL=postgres://marsdevs:marsdevs123@db:5432/marsdevs_db

# Или отдельные параметры PostgreSQL (если DATABASE_URL не задан)
# DB_NAME=marsdevs_db
# DB_USER=marsdevs
# DB_PASSWORD=marsdevs123
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# CORS
# =============================================================================

# Разрешённые источники для CORS (через запятую, с протоколом)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# JWT TOKENS
# =============================================================================

# Время жизни access токена (в минутах)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60

# Время жизни refresh токена (в днях)
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# SECURITY (Production)
# =============================================================================

# Перенаправление на HTTPS (True для production с SSL)
SECURE_SSL_REDIRECT=False

# Уровень логирования Django
DJANGO_LOG_LEVEL=INFO
