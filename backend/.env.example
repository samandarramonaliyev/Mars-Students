# =============================================================================
# MARS DEVS - BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Скопируйте этот файл в .env и заполните значения

# =============================================================================
# DJANGO CORE
# =============================================================================

# ВАЖНО: Сгенерируйте уникальный ключ для production
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-in-production

# Режим отладки (False для production!)
DEBUG=True

# Разрешённые хосты (через запятую)
# Для Render: .onrender.com,localhost
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF доверенные источники (через запятую, с протоколом)
# Для Render добавьте: https://your-frontend-name.onrender.com
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# DATABASE (PostgreSQL - рекомендуется для production)
# =============================================================================

# Использовать SQLite (False для PostgreSQL - рекомендуется для production!)
# SQLite данные теряются при перезапуске сервера на хостингах
USE_SQLITE=True

# PostgreSQL через DATABASE_URL
# Формат: postgres://user:password@host:port/dbname
# DATABASE_URL=postgres://marsdevs:marsdevs123@localhost:5432/marsdevs_db

# Для Docker: DATABASE_URL=postgres://marsdevs:marsdevs123@db:5432/marsdevs_db
# Для Railway/Render: используйте DATABASE_URL из панели хостинга

# Или отдельные параметры PostgreSQL (если DATABASE_URL не задан)
# DB_NAME=marsdevs_db
# DB_USER=marsdevs
# DB_PASSWORD=marsdevs123
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# REDIS (Channels)
# =============================================================================

# Redis URL для WebSocket/Channels
# Формат: redis://host:port/db
# Пример для Docker: redis://redis:6379/0
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CORS
# =============================================================================

# Разрешённые источники для CORS (через запятую, с протоколом)
# Примеры:
#   https://marsdevs-frontend.onrender.com
#   https://mars-students-frontend.vercel.app
#   https://your-custom-domain.com
#
# ВАЖНО: backend автоматически разрешает следующие домены через regex:
#   - *.onrender.com
#   - *.vercel.app
#   - *.netlify.app
#
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# JWT TOKENS
# =============================================================================

# Время жизни access токена (в минутах)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60

# Время жизни refresh токена (в днях)
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# SECURITY (Production)
# =============================================================================

# Перенаправление на HTTPS (True для production с SSL)
# Render обрабатывает SSL на своей стороне, оставьте False
SECURE_SSL_REDIRECT=False

# Уровень логирования Django
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# ADMIN SETUP (для первоначальной настройки на Render)
# =============================================================================

# Секретный ключ для создания admin через /setup-admin/?key=YOUR_KEY
# SETUP_KEY=marsdevs-setup-2024
