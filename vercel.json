{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://mars-students-backend.onrender.com/api/:path*"
    },
    {
      "source": "/media/:path*",
      "destination": "https://mars-students-backend.onrender.com/media/:path*"
    },
    {
      "source": "/admin/:path*",
      "destination": "https://mars-students-backend.onrender.com/admin/:path*"
    },
    {
      "source": "/static/:path*",
      "destination": "https://mars-students-backend.onrender.com/static/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
